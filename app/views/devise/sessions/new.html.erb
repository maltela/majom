
   	<div>
      <h1 class="logo-name">Majom</h1>
    </div>
    <h3>Willkommen bei Majom</h3>
    <p>Einfaches, übersichtliches Projektmanagement.</p>
    <p>Jetzt einloggen und loslegen</p>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email,  :autofocus => true, :placeholder =>  'E-Mail-Adresse' %>
    <%= f.password_field :password, :placeholder  => 'Passwort' %>
    <%= f.submit "Login", :Class=>'btn btn-primary block full-width m-b' %>
  <% end %>
  <%= render "devise/shared/links" %>

