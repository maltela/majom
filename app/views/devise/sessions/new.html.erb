<div>
   	<div>
      <h1 class="logo-name">Majom</h1>
    </div>
    <h3>Willkommen bei Majom</h3>
    <p>Einfaches, übersichtliches Projektmanagement.</p>
    <p>Jetzt einloggen und loslegen</p>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "m-t", :role=>"form"}) do |f| %>
     <div class="form-group">
        <%= f.email_field :email,  :autofocus => true, :placeholder =>  'E-Mail-Adresse', :class=>'form-control' %>
     </div>
     <div class="form-group">
       <%= f.password_field :password, :placeholder  => 'Passwort',:class=>'form-control'  %>
    </div>
       <%= f.submit "Login", :Class=>'btn btn-primary block full-width m-b' %>
  <% end %>

</div>
  <%= render "devise/shared/links" %>

