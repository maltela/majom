  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field        :user_name,             :placeholder => 'Benutzername',:autofocus => true  %>
    <%= f.text_field        :first_name,            :placeholder => 'Vorname' %>
    <%= f.text_field        :last_name,             :placeholder => 'Nachname' %>
    <%= f.email_field       :email,                 :placeholder => 'Email address' %>
    <%= f.password_field    :password,              :placeholder => 'Password' %>
    <%= f.password_field    :password_confirmation, :placeholder => 'Password confirmation' %><p>
    <%= f.submit "Login", :class=>'btn btn-primary block full-width m-b' %>

  <% end %>
