
<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name">Majom</h1>

    </div>
   <h3>FÃ¼r Majom registrieren</h3>
   <p>Registriere dich jetzt und lege sofort los</p>
</div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => "m-t", :role=>"form"}) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group"><%= f.text_field        :user_name,             :placeholder => 'Benutzername',:autofocus => true   ,:class=>'form-control'  %> </div>
      <div class="form-group"><%= f.text_field        :first_name,            :placeholder => 'Vorname'               ,:class=>'form-control'   %> </div>
      <div class="form-group"><%= f.text_field        :last_name,             :placeholder => 'Nachname'              ,:class=>'form-control'   %> </div>
      <div class="form-group"><%= f.email_field       :email,                 :placeholder => 'Email-Adresse'         ,:class=>'form-control'   %> </div>
      <div class="form-group"><%= f.password_field    :password,              :placeholder => 'Password'              ,:class=>'form-control'   %> </div>
      <div class="form-group"><%= f.password_field    :password_confirmation, :placeholder => 'Password Wiederholung' ,:class=>'form-control'   %> </div>
    <%= f.submit "Registrieren", :class=>'btn btn-primary block full-width m-b' %>

  <% end %>
